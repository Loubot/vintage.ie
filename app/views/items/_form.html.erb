<div class="container">  
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if @item.new_record? %>
            <h3 class="panel-title">Add an item to your store <small>It's free!</small></h3>
          <% else %>
            <h3 class='panel-title'>Update your item<small>It's free!</small></h3>
          <% end %>
        </div>
        <div class="panel-body">
          <%= form_for [@context, @item], html: { id: 'item_edit' } do |f| %>
              
            <div class="col-xs-11 col-sm-11 col-md-11">
              <div class="form-group">
                  <%= f.text_field :name, class: "form-control input-sm", :placeholder => 'Item Name' %>
              </div>
            </div>
            <div class="col-xs-11 col-sm-11 col-md-11">
              <div class="form-group">
                  Size: <%= f.select :size, (4..32).step(0.5).to_a %>
              </div>
            </div>                
            <div class="col-xs-11 col-sm-11 col-md-11">
              <div class="form-group">
                  <%= f.text_area :description, class: "form-control input-sm", :placeholder => 'Description of your item' %>
              </div>
            </div>
            <div class="col-xs-11 col-sm-11 col-md-11">
              <div class="form-group">
                  <%= f.number_field :price, class: "form-control input-sm", :placeholder => 'How much?' %>
              </div>
            </div>
            <%= f.hidden_field :shop_id, value: @context.id %>
            
            <%= f.submit  class: 'btn btn-primary shop-signup-submit' %>
          <% end %>
          <div class="row centered-form">
            <div class="col-xs-11 col-sm-11 col-md-11">
              <div class="form-group">
                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
     
      
  
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">You can edit your item here <small>yada</small></h3>
        </div>
          <div class="panel-body photo">  
            <%= form_for [@context, @photo], remote: true, :html => {id:"my-awesome-dropzone", class:'dropzone' } do |f| %>
              
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <div class="col-xs-11 col-sm-11 col-md-11">
                  <div class="form-group fallback">
                       <%= f.file_field :photo %>
                  </div>
                </div>
                
                <div class="dz-message" data-dz-message><span>Drag files or click here</span></div>
                <div class="form-group fallback">                       
                </div> 
                <button class='btn btn-success'>Upload</button>
            <% end %>        
          </div> <!-- end of panel-body -->
        </div> <!-- end of panel panel-default -->            
      </div> <!-- end of col-md4 -->          
  </div> <!-- end of row container -->
      <div class="uploaded_photos">
        <div class="row bla">  
            <% if !@photos.empty? %>
              <%= render @photos %>
            <% end %>
        </div> <!-- end of row -->
      </div> <!-- end of upload_photos -->
      
      
            